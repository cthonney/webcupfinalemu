<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :surname,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "family-name" } %>

    <%= f.input :name,
                required: true,
                input_html: { autocomplete: "given-name" } %>

    <%= f.input :email,
                required: true,
                input_html: { autocomplete: "email" } %>

    <%= f.input :phone_number,
                required: true,
                input_html: { autocomplete: "tel" } %>

    <%= f.input :country, as: :string,
                required: true,
                input_html: { autocomplete: "country" } %>


    <%= f.input :password,
                required: true,
                input_html: { autocomplete: "new-password" } %>

    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>

    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <% if @show_checkbox_recaptcha %>
        <%= recaptcha_tags %>
      <% else %>
        <%= recaptcha_v3(action: 'login', class: 'btn main-cta-color', site_key: ENV['RECAPTCHA_SITE_KEY_V3']) %>
    <% end %>
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
